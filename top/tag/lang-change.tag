<lang-change>
	<div>
		<span onclick="{ parent.toggle_lang('ja') }" class="btn translation {current-language: lang == 'ja'}">JP</span>
		<span class="hide btn translation disabled">/</span>
		<span onclick="{ parent.toggle_lang('en') }" class="btn translation {current-language: lang == 'en'}">EN</span>
	</div>

</lang-change>